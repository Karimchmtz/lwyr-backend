# Application
APP_NAME=lwyr-backend
DEBUG=false

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=lwyr_db
DATABASE_USER=lwyr_user
DATABASE_PASSWORD=lwyr_password

# OpenRouter
OPENROUTER_API_KEY=your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_CHAT_MODEL=qwen/qwen3-0.6b:free
OPENROUTER_EMBEDDING_MODEL=qwen/qwen3-embedding-0.6b
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_MAX_TOKENS=2000

# JWT
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# PDF Processing
PDF_CHUNK_SIZE=1000
PDF_CHUNK_OVERLAP=200

# Embeddings
EMBEDDING_DIMENSION=8192
EMBEDDING_SIMILARITY_THRESHOLD=0.7
EMBEDDING_MAX_RESULTS=5

# Resources
RESOURCES_PATH=./resources
